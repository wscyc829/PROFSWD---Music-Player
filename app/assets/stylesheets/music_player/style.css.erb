/* BEGIN SCROLL BAR */

::-webkit-scrollbar {
	width: 12px;
}
::-webkit-scrollbar-track {
	background-color: rgba(0, 0, 0, 0.3);
}
::-webkit-scrollbar-thumb {
	background-color: rgba(0, 0, 0, 0.3);
}
::-webkit-scrollbar-thumb:hover {  
	background-color: rgba(0, 0, 0, 0.5);
}

/* END OF SCROLL BAR */
/* SONG LIST AT THE RIGHT SIDE */

#rightlist {
	float: right;
	width: 50%;
	height: 100%;
	overflow-y: scroll;
}

.area {
	margin-left: 16px;
}

.artistitalic { 
	font-family: 'Segoe UI', serif;
	font-size: 16px;
	vertical-align: middle middle;
	font-style: italic;
}

ul {
	padding-left: 0;
}

ul li {
	list-style: none;
	list-style-type: none;
	width: 96%;
	height: 50px;
	background-color: rgba(0, 0, 0, 0.3);
	margin-left: 4px;
	font-family: 'Cambria';
	font-size: 18px;
	color: #FFFFFF;
}

ul li input[type="text"] {
	width: 90%;
	height: 100%;
	margin-left: 8px;
	background-color: rgba(0, 0, 0, 0.1);
	border: none;
	text-align: left;
	font-family: 'Cambria';
	font-size: 18px;
	color: #FFFFFF;
}

ul li input[type="submit"] {
	width: 100%;
	height: 100%;
	background-color: transparent;
	border: none;
	text-align: left;
	font-family: 'Cambria';
	font-size: 18px;
	color: #FFFFFF;
}

ul li:hover {
	background-color: rgba(0, 0, 0, 0.5);
}

ul li:active {
	background-color: rgba(0, 0, 0, 0.2);
}

/* END OF SONG LIST AT THE RIGHT SIDE */

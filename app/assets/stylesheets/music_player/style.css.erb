/* ============================= PLAYER PAGE ============================= */

#parent_player_div {
	position: fixed;
	top: 0;
	left: 0;
	height: 100vh;
	width: 100vw;
	background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= asset_path 'music_player/2.jpg' %>) no-repeat center top fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}

#player_header {
	display: inline-block;
	position: fixed;
	margin: 0;
	top: 0;
	left: 0;
	height: 25px;
	width: 100vw;
	background-color: rgba(0, 0, 0, 0.4);
}

#player_header > span {
	float: left;
	margin-top: 2px;
	margin-left: 4px;
	color: white;
	font-family: 'Segoe UI', sans-serif;
	font-size: 14px;
}

#player_header > button {
	float: right;
	height: 100%;
	width: 100px;
	background-color: rgba(0, 0, 0, 0.0);
	border: none;
	color: white;
	font-family: 'Segoe UI', sans-serif;
	font-size: 14px;
}

#player_header > button:hover {
	background-color: rgba(255, 255, 255, 0.1);
}

#player_header > button:active {
	background-color: rgba(0, 0, 0, 0.0);
}

#player_header > button:focus {
	outline: none;
}

#frame {
	width: 60vw;
	height: 80vh;
	max-width: 100%;
	max-height: 100%;
	background-color: rgba(0, 0, 0, 0.4);
	border: none;
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -40vh;
	margin-left: -30vw;
}

#left {
	float: left;
	width: 50%;
	height: 100%;
}

/* PLAYER AT THE UPPER LEFT */

#controls {
	background-color: rgba(0, 0, 0, 0.3);
	height: 30px;
	width: 100%;
}

#controls > button {
	background-color: rgba(0, 0, 0, 0.0);
	border: 0px;
	height: 30px;
	width: 60px;
}

#controls > button:hover {
	background-color: rgba(0, 0, 0, 0.3);
}

#controls > button:active {
	background-color: rgba(0, 0, 0, 0.1);
}

#controls > button:focus {
	outline: none;
}

#player {
	width: 94%;
	height: auto;
	margin-top: 16px;
	margin-left: 16px;
}

#songinfo {
	width: 100%;
	margin-top: 16px;
	margin-left: 4px;
	font-family: 'Cambria';
	font-size: 18px;
	color: #FFFFFF;
}

#album {
	margin-left: 6px;
	font-family: 'Segoe UI', sans-serif;
	font-size: 16px;
	color: #ecf0f1;
}

/* END OF PLAYER AT THE UPPER RIGHT */

/* ============================= LOGIN PAGE ============================= */

#parent_login_div {
	position: fixed;
	top: 0;
	left: 0;
	height: 100vh;
	width: 100vw;
	background: linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5) ), url(<%= asset_path 'music_player/1.jpg' %>) no-repeat center top fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}

#login_container {
	position: absolute;
	top: 50%;
	left: 50%;
	margin-top: -15vw;
	margin-left: -15vw;
	border: 1px solid #FFFFFF;
	width: 30vw;
	height: 30vw;
	vertical-align: middle;
}

#login_innerbox {
	position: absolute;
	height: 20vw;
	width: 100%;
	margin-top: 7vw;
	/*border: 1px solid red;*/
	font-family: 'Segoe UI', sans-serif;
	font-size: 18px;
	color: #FFFFFF;
}

.inputbutton {
	width: 50%;
	height: 32px;
	margin-top: 8px;
	background-color: rgba(255, 255, 255, 0.2);
	border: none;
	font-family: 'Segoe UI', sans-serif;
	font-size: 18px;
	font-style: italic;
	color: #FFFFFF;
}

.inputbutton:hover {
	background-color: rgba(255, 255, 255, 0.4);
}

.inputbutton:active {
	background-color: rgba(255, 255, 255, 0.8);
}

.inputbutton:focus {
	outline: none;
}

.inputtextbox {
	width: 50%;
	height: 32px;
	margin-top: 8px;
	margin-bottom: 8px;
	background-color: rgba(255, 255, 255, 0.2);
	border: none;
	text-align: center;
	font-family: 'Segoe UI', sans-serif;
	font-size: 18px;
	color: #FFFFFF;
}

.inputtextbox:hover {
	background-color: rgba(255, 255, 255, 0.4);
}

.inputtextbox:focus {
	outline: none;
}

/* ============================= END OF LOGIN PAGE ============================= */
